<div class="container">
    <h1 class="main-title">Nuestros productos</h1>
    {{#if selectedCategory}}
        <h2 class="category-subtitle">Categoría: {{selectedCategory}}</h2>
    {{/if}}

    <div class="products-container">
        {{#each products}}
            <div class="product-card">
                {{#if this.thumbnails}}
                    <img src="/img/productos/{{this.thumbnails}}" alt="{{this.title}}" class="product-img">
                {{else}}
                    <img src="/img/product.jpg" alt="Imagen por defecto" class="product-img">
                {{/if}}
                <h2 class="product-name">{{this.title}}</h2>
                <p class="product-price">${{this.price}}</p>
                <p class="product-desc">{{this.description}}</p>
            </div>
        {{/each}}
    </div>

    <div class="pagination-container">
        <div class="pagination-nav">
            <a href="{{pagination.firstLink}}" class="nav-btn {{#unless pagination.hasPrevPage}}disabled{{/unless}}" {{#unless pagination.hasPrevPage}}aria-disabled="true"{{/unless}}>
                ← Ir al inicio
            </a>
            
            {{#if pagination.hasPrevPage}}
                <a href="{{pagination.prevLink}}" class="nav-btn">← Anterior</a>
            {{else}}
                <span class="nav-btn disabled">← Anterior</span>
            {{/if}}
            
            <span class="page-info">Página {{pagination.currentPage}} de {{pagination.totalPages}}</span>
            
            {{#if pagination.hasNextPage}}
                <a href="{{pagination.nextLink}}" class="nav-btn">Siguiente →</a>
            {{else}}
                <span class="nav-btn disabled">Siguiente →</span>
            {{/if}}
        </div>
        
        <div class="pagination-links">
            {{#each links}}
            <a href="{{this.link}}" class="page-link">{{this.text}}</a>
            {{/each}}
        </div>
    </div>
</div>